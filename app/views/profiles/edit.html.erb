<h1>Edit Profile</h1>

<%= form_with model: @user, url: user_profile_path(@user), method: :patch, local: true do |form| %>
  <div class="form-group">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control", value: @user.username %>
  </div>

  <%= form.fields_for :profile, @profile do |profile_form| %>
    <div class="form-group">
      <%= profile_form.label :bio %>
      <%= profile_form.text_area :bio, class: "form-control", value: @profile.bio %>
    </div>

    <div class="form-group">
      <%= profile_form.label :avatar_url %>
      <%= profile_form.text_field :avatar_url, class: "form-control", value: @profile.avatar_url %>
    </div>
  <% end %>

  <%= form.submit "Save Changes", class: "btn btn-success" %>
  <%= link_to "Cancel", user_profile_path(@user), class: "btn btn-secondary" %>
<% end %>





<script>
/* Resize the avatar image */
.avatar-img {
  width: 50px;   /* Set your desired width */
  height: 50px;  /* Set your desired height */
  object-fit: cover; /* Ensures the image covers the area without distortion */
  border-radius: 50%; /* Makes the avatar circular */
  background-color: #f0f0f0; /* Optional: a background color in case the image fails to load */
}

</script>