<div id="<%= dom_id(comment) %>" class="comment d-flex justify-content-between align-items-center mb-3 p-2 border rounded bg-light">
  <div class="comment-content">
    <p class="mb-1"><%= comment.content %></p>
    <small class="text-muted">Posted on <%= comment.created_at.strftime('%b %d, %Y at %I:%M %p') %></small>
  </div>
  <div class="comment-user">
    <small class="text-muted">- <%= comment.user.email %></small>
  </div>
</div>
